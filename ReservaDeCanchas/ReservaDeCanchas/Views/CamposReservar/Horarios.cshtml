@model ReservaDeCanchas.Models.CampoDetalleViewModel


@{
    ViewBag.Title = "Horarios";
}

<h2>Horarios</h2>

<div>
    <h4>CampoSet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.campo.Tipo_campoSet.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.campo.Tipo_campoSet.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.campo.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.campo.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.campo.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.campo.Descripcion)
        </dd>



    </dl>
</div>

<div class="row">
    @using (Ajax.BeginForm("HorariosResultado", "CamposReservar",
                                        new AjaxOptions
                                        {
                                            HttpMethod = "Get",
                                            InsertionMode = InsertionMode.Replace,
                                            UpdateTargetId = "horariosEncontrados",
                                            
                                        },
                                        new
                                        {
                                            id = "BuscaEventosForm",
                                            @class = "form-inline"
                                        }
                                        ))
    {
     <div class="row">
         <div class="form-group col-sm-6">
             <div class="input-group">
                 <input type="date" placeholder="Buscar Evento..."
                        name="FechaInicio" value="@DateTime.Now.Date.ToString("yyyy-MM-dd")" min="@DateTime.Now.Date.ToString("yyyy-MM-dd")" max="@DateTime.Now.Date.AddDays(14).ToString("yyyy-MM-dd")" class="form-control" />
                 <input type="hidden" name="campoId" value="@Model.campo.Id" />
                 <span class="input-group-btn">
                     <button class="btn btn-success" type="submit">Go!</button>
                 </span>
             </div>
         </div>
   
        </div>
        <div class="row">
            <div class="form-group col-sm-6">
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-default">Anterior</button>
                    <button type="button" class="btn btn-default">Siguiente</button>
                </div>
            </div>
        </div>
    }
        </div>
<p>
    <div id="horariosEncontrados" class="row">
        @Html.Partial("_HorarioDetalle", Model);
    </div>
</p>



@section Scripts{
 
    @Scripts.Render("~/bundles/unobtrusiveajax")
    @Scripts.Render("/bundles/horarios")
}