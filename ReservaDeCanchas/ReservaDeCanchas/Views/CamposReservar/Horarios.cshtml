@model ReservaDeCanchas.Models.CampoDetalleViewModel


@{
    ViewBag.Title = "Horarios";
}

<h2>Horarios</h2>

<div>
    <h4>CampoSet</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.campo.Tipo_campoSet.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.campo.Tipo_campoSet.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.campo.Nombre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.campo.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.campo.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.campo.Descripcion)
        </dd>



    </dl>
</div>


<div class="row">
    <table class="table table-bordered table-hover" id="tablaHorarios">
        <thead>
            <tr>
                <th>Hora</th>
                @foreach (var dia in Model.semana)
                {
                    <th>@dia.textoDia</th>
                
                }


            </tr>
        </thead>
        <tbody>
            @for(int i = 8; i<23; i++)
            {
                
                <tr>
                    <td>@string.Format("{0}:00", i)</td>
                    @foreach (var dia in Model.semana)
                    {
                        if(Model.reservas.Where(r=> r.FechaHoraAlquiler.Date == dia.fecha.Date && r.FechaHoraAlquiler.Hour == i).Count()>0)
                        {
                            <td  class="success">Reservado</td>
                        }
                        else
                        {
                            <td>@*@Html.ActionLink("Libre", "Reservar",new DatosRC.ADO.ReservaSet { FechaHoraAlquiler = new DateTime(dia.fecha.Year,dia.fecha.Month,dia.fecha.Day,i,0,0),
                               MontoAlquiler = 160 , MontoPagado = 0, Campo_Id = Model.campo.Id})*@
                                <a href="#" type="button"  data-toggle="modal" data-target="#myModal" >
                                   <div class="horarioLibre" fecha-Alquiler="@(new DateTime(dia.fecha.Year,dia.fecha.Month,dia.fecha.Day,i,0,0))">Libre</div>
                                </a>
                           </td>
                        }

                    }
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Reservar @Model.campo.Nombre</h4>
            </div>
            <div class="modal-body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
<p>
   
    @Html.ActionLink("Back to List", "Index")
</p>


